<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green"
        android:orientation="vertical"
        android:paddingLeft="@dimen/small_margin"
        android:paddingRight="@dimen/small_margin"
        tools:context="com.example.jno14.moveggiesmoproblems.MonthlyJobsFragment"
        android:id="@+id/monthly_jobs_layout">

        <TextView
            android:id="@+id/buffer"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/green"/>

        <TextView
            android:id="@+id/monthly_jobs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buffer"
            android:text="@string/title_jobs"
            android:textSize="@dimen/titles"
            android:padding="@dimen/fab_margin"
            />

        <Button
            android:id="@+id/add_task_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buffer"
            android:text="@string/button_text_add_task"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/fab_margin"
            android:background="@color/darkGreen"
            android:shadowColor="@color/shadow"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/monthly_task_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/monthly_jobs"
            android:background="@drawable/border" />

    </RelativeLayout>


