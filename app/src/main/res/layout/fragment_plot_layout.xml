<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_plot_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/green"
    android:paddingLeft="@dimen/small_margin"
    android:paddingRight="@dimen/small_margin"
    tools:context="com.example.jno14.moveggiesmoproblems.AddPlotActivity">

    <TextView
        android:id="@+id/buffer"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/green"/>

    <TextView
        android:id="@+id/plotTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buffer"
        android:text="@string/title_plot"
        android:textSize="@dimen/titles"
        android:padding="@dimen/titles"/>

    <Button
        android:id="@+id/add_plot_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buffer"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/fab_margin"
        android:text="@string/button_text_add_plot"
        android:background="@color/darkGreen"
        android:shadowColor="@color/shadow"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_plot_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plotTitle"/>

</RelativeLayout>
